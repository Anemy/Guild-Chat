extends layout
block content
      
    script(src='https://cdn.socket.io/socket.io-1.2.0.js')
    script(src='https://cdn.webrtc-experiment.com/RTCMultiConnection.js')
    script(defer="defer" src="/javascripts/locallobby.js")
    
    include banner
    .lobbyPage
        .bodyLine
        .pageThings
            .experiment
                <input type="text" id="conference-name">
                <button id="setup-new-conference" class="setup">Create lobby</button>

                <!-- list of all available broadcasting rooms -->
                <table style="width: 100%;" id="rooms-list"></table>

                <!-- local/remote videos container -->
                <div id="audios-container"></div>
            .userTitle
                Online Users
                .usersOnline
            .chatArea
                #msgBox.chatbox
                    ul#messages
                .controls
                    textarea.inputBox#m(type="text" placeHolder="Insert message...")

    include copyright
