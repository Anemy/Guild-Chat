extends layout
block content
    .landingPage
        .banner
            .bannerLeftSide
                .vowbText(href="/")
                    a(href="/").
                        vowb.net
                .quickLinks
                    .lobbiesButton(href="/lobbies")
                        a(href="/lobbies").
                            lobbies
                    .forumsButton(href="/forums")
                        a(href="/forums").
                            forums
            .button
                a(class="signupButton" href="/signup").
                      sign up
                .loginButton(onclick="loginButtonClicked()")
                    a.
                        log in
          .mainContent
              a.
                  Talk with all of your friends and guild mates using <span class="accentText">vowb.net</span>!
              .bodyLine
              a(class=signupButton)
